      background-color: #3e8e41;
    }

    img {
      color: #3e8e41;
    }

    #navBar {
      background-color: #73ceb7;
      overflow: hidden;
    }

    #navBar a {
      padding: 7px 8px;
      text-decoration: none;
      color: white;
      font-weight: 700;
    }

    #navBar a:hover {
      background-color: #ddd;
      color: black;
      border-radius: 10px;

    }

    #navLogo {
      width: 50px;
      height: 50px;
      margin-top: 5px;
      margin-left: 7%;
    }

    #navBar {
      display: flex;

    }

    .navBarList {
      margin-left: 35%;
      margin-top: 15px;
    }

    #autoBuyBtn {
      margin-bottom: 10px;
    }

    #navBar h2 {
      color: rgb(249, 242, 242);
      border-radius: 10px;
      margin: 10px;
      margin-left: 5%;
    }
