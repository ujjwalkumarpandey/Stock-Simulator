  <h1>User Reviews</h1>
  <div class="reviews">
    <div>


      <!-- -- card -- -->

      <div id="card-div"
        style="display:flex; align-items:center; justify-content: space-between; margin-top: 40px; width:100%">
        {{#if result}}
        {{#each result}}

        <a href="#">
          <div class="card">

            <div class="profile-img display-flx">

              <div><img class="UserImg"
