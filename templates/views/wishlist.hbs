  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: whitesmoke;
    }

    h1 {
      text-align: center;
      margin-top: 30px;
      color: #333;
    }

    .stock-container {
      display: inline-block;
      position: relative;
      margin: 5px auto;

      width: 30%;
      background-color: #fff;
      padding: 10px;
      margin-bottom: 10px;
      border-radius: 10px;
      box-shadow: 4px 6px 24px rgba(0, 0, 0, 0.1);
    }

    .stock-header {
      background-color: #00d09c;
      color: #fff;
      padding: 10px;
      text-align: center;
      font-weight: bold;
      font-size: 1.2rem;
      margin-bottom: 10px;
      border-radius:
        10px;
    }

    .stock-units {
      font-size: 1.5rem;
      font-weight: bold;
      margin-bottom: 10px;
    }

    .stock-change {
      font-size: 1.2rem;
      margin-bottom:
        0;
    }


    .stock-positive {
      color: green;
    }

    .stock-negative {
      color: red;
    }

    .insideBtn {
      color: #f0f0f0;
      text-decoration: none;
      border: 2px solid #333;
      background-color: #e9780d;
      margin: 2px;
      padding: 4px 4px;
      border-radius: 5px;
    }

    .container {
      margin: 0px auto;
      justify-self: center;
      align-items: center;
      box-shadow: 4px 6px 24px rgba(0, 0, 0, 0.1);
    }

    .containers {
      display: flex;
      flex-wrap: wrap;



    }

    #hel {
      text-align: center;
    }

    #hr {
      text-align: center;
      color: red;
    }

    #navBar {
      background-color: #73ceb7;
      overflow: hidden;
    }

    #navBar a {
      padding: 7px 8px;
      text-decoration: none;
      color: white;
      font-weight: 700;
    }

    #navBar a:hover {
      background-color: #ddd;
      color: black;
      border-radius: 10px;

    }

    #navLogo {
      width: 50px;
      height: 50px;
      margin-top: 5px;
      margin-left: 7%;
    }

    #navBar {
      display: flex;

    }

    .navBarList {
      margin-left: 35%;
      margin-top: 15px;
    }

    #autoBuyBtn {
      margin-bottom: 10px;
    }

    #navBar h2 {
      color: rgb(249, 242, 242);
      border-radius: 10px;
      margin: 10px;
      margin-left: 5%;
    }
  </style>
